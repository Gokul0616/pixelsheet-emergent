# Authentication
JWT_SECRET=supersecret-change-in-production-jwt-key-12345
JWT_REFRESH_SECRET=supersecret-change-in-production-refresh-key-67890
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application
NODE_ENV=development
PORT=5000

# Email (optional - for MFA backup codes)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30

# Data Storage
DATA_DIR=./data

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000